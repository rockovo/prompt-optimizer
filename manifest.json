{
    "manifest_version": 2,
    "name": "Prompt Optimizer",
    "version": "1.0",
    "description": "Optimize your prompts with Claude AI",
    "permissions": [
        "storage",
        "https://api.anthropic.com/*",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "prompt-optimizer@example.com"
        }
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Prompt Optimizer",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}